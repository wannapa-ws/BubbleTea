<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rgb"
    tools:context=".list_selected">

    <ImageView
        android:id="@+id/imgV"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="20dp"
        android:src="@mipmap/ic_launcher"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_marginTop="320dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="40dp">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="name"
                android:textAlignment="center"
                android:padding="2dp"
                android:textColor="#725E95"
                android:textSize="28sp"/>
            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_name"
                android:layout_centerHorizontal="true"
                android:text="price"
                android:padding="2dp"
                android:textColor="#FFC107"
                android:textSize="30sp"/>
            <TextView
                android:id="@+id/sweet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_price"
                android:text="Sweetness:"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:padding="2dp"
                android:textColor="#725E95"
                android:textSize="26sp"/>
            <TextView
                android:id="@+id/tv_sweet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sweet"
                android:layout_below="@id/tv_price"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="180dp"
                android:padding="2dp"
                android:textColor="#725E95"
                android:textSize="26sp"/>
            <TextView
                android:id="@+id/volume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_sweet"
                android:layout_marginLeft="20dp"
                android:text="Volume:"
                android:padding="2dp"
                android:textColor="#725E95"
                android:textSize="26sp"/>
            <TextView
                android:id="@+id/tv_volume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_sweet"
                android:layout_marginLeft="180dp"
                android:text="volume"
                android:padding="2dp"
                android:textColor="#725E95"
                android:textSize="26sp"/>
            <TextView
                android:id="@+id/calories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_volume"
                android:layout_marginLeft="20dp"
                android:text="Calories:"
                android:padding="2dp"
                android:textColor="#725E95"
                android:textSize="26sp"/>
            <TextView
                android:id="@+id/tv_calories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_volume"
                android:layout_marginLeft="180dp"
                android:text="calories"
                android:padding="2dp"
                android:textColor="#725E95"
                android:textSize="26sp"/>
            <Button
                android:id="@+id/btn_back"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"
                android:text="BACK"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:background="#725E95"
                android:layout_below="@id/tv_calories"/>
            <Button
                android:id="@+id/btn_db"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="120dp"
                android:text="RECOMMEND"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:background="#725E95"
                android:layout_below="@id/tv_calories"/>

        </RelativeLayout>

    </ScrollView>

</FrameLayout>